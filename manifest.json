{
  "manifest_version": 3,
  "name": "Instagram DM Organizer",
  "version": "0.1.0",
  "description": "Collect, organize, and craft Instagram DM outreach campaigns.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["*://*.instagram.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "IG DM Organizer"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
